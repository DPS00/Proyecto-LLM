.cabecera-cur{
    text-align: center;
    height: 80px;
}

.cabecera-cur h1{
    margin-bottom: 10px;
    font-size: 30px;
    font-weight: bold;
    font-family: 'Julius Sans One', sans-serif;
}

.cabecera-cur a{
    text-decoration: none;
    color: black;
    padding: 5px;
    background-color: #4089ff;
    border-radius: 10px;
    font-size: 14px;
    color: white;
    font-family: 'Julius Sans One', sans-serif;;
}

.cabecera-cur a:hover{
    background-color: black;
    color: white;
    transition: 0.5s;
}

.container div:first-child:hover{
    background-color: #EAD41C;
    transition: 0.6s;
    border: #EAD41C 1px solid;
    box-shadow: 2px 2px 10px orange;
}


.container div:nth-child(2):hover{
    background-color: #2071F2;
    border: 1px solid #2071F2;
    transition: 0.6s;
    box-shadow: 2px 2px 10px rgb(0, 4, 255);
}
.container div:nth-child(3):hover{
    background-color: #D84924;
    border: 1px solid #D84924;
    transition: 0.6s;
    box-shadow: 2px 2px 10px #ff8000;
}
.container div:last-child:hover{
    background-color: #3FA73D;
    border: 1px solid #3FA73D;
    transition: 0.6s;
    box-shadow: 4px 4px 10px greenyellow;
}
